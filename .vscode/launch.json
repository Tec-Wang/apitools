    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch RPC Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/rpc/tools.go",
            "args": [
                "-f",
                "etc/tools.yaml"
            ],
            "cwd": "${workspaceFolder}/rpc",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Launch API Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/api/tools.go",
            "args": [
                "-f",
                "etc/tools.yaml"
            ],
            "cwd": "${workspaceFolder}/api",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Test RPC Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/test_rpc_client.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "console": "integratedTerminal",
            "showLog": true
        }
    ],
    "compounds": [
        {
            "name": "Launch Both Services",
            "configurations": [
                "Launch RPC Server",
                "Launch API Server"
            ],
            "stopAll": true
        }
    ]
}